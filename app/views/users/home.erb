<head>
  <h1>Hi <%=@current_user.first_name.capitalize!%>, Welcome To Quorora</h1>
</head>

<div>
  <a href="/<%= @current_user.id %>/questions"><button type="button" name="button">Your Questions</button></a>
  <a href="/<%= @current_user.id %>/questions_answered"><button type="button" name="button">Your Answered Questions</button></a>
</div>

<div>
  <h2>Top Stories:</h2>
  <div>
    <% @all_questions.each do |question| %>
    <a href="/questions/<%=question.id%>">
    <li>
      <div>
        <h4><%= question.data %></h4>
        <p>Author: <%=question.user.first_name%></p>
      </div>
      <div>
        <ol>
          <% question.answers.each do |answer| %>
            <li><%= answer.data%></li>
              <ul>Author: <%=answer.user.first_name%></ul>
          <% end %>
        </ol>
      </div>
      <%if logged_in?%>
        <form action="/question/<%= question.id %>/answers/create" method="post">
            <input type="text" name="answer[data]" placeholder="Insert your answer here" required>
            <button type="submit" name="button">Post</button>
        </form>
      <%else%>
      <a href="/"><button type="button" name="button">Please Log In To Post Answer</button></a>
      <%end%>
    </li>
    </a>
    <% end %>
  </div>
</div>

<footer>
</footer>
